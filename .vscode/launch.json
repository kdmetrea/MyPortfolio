    "version": "0.2.0",
    "configurations": [

        {
            "command": "cd Portfolio&&sudo npm run dev",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Запустить Chrome на localhost",
            "url": "http://localhost:8000/Home",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Portfolio/manage.py",
            "args": ["runserver"],
            "django": true,
            "justMyCode": true
        }
    ]
}